{
  "build": {
    "dockerfile": "./Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "true",
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000",
      "upgradePackages": "true"
    },
    "ghcr.io/devcontainers/features/docker-inside-of-docker:1": {},
    "ghcr.io/devcontainers/features/zsh:1": {}
  },
  "postCreateCommand": "chsh -s $(which zsh)",
  "extensions": [
    "github.copilot",
    "github.copilot-chat"
  ],
  "services": {
    "docker": {
      "image": "docker:dind",
      "volumes": [
        "/var/run/docker.sock:/var/run/docker.sock"
      ]
    }
  },
  "runArgs": [
    "-e",
    "DOCKER_HOST=tcp://localhost:2375"
  ]
}